{
	"name": "spatian-dev/ziglite",
	"description": "A Laravel named routes integration for Javascript",
    "homepage": "https://ziglite.spatian.dev",
	"type": "library",
	"license": "Apache-2.0",
	"authors": [
		{
			"name": "Saad Sidqui",
			"email": "spatian.dev@gmail.com"
		}
	],
    "autoload": {
		"psr-4": {
			"Spatian\\Ziglite\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Spatian\\Ziglite\\Tests\\": "tests/"
		}
	},
    "keywords": [
        "ziglite",
        "laravel",
        "named",
        "routing",
        "routes",
        "laravel-package",
        "package"
    ],
	"minimum-stability": "stable",
	"prefer-stable": true,
	"require": {
		"php": "^8.1",
		"illuminate/support": "^10.0|^11.0"
	},
	"require-dev": {
		"orchestra/testbench": "^8.0|^9.0",
		"pestphp/pest": "^2.34"
	},
	"extra": {
        "laravel": {
            "providers": [
                "Spatian\\Ziglite\\Providers\\ZigliteServiceProvider"
            ]
        }
    },
    "config": {
		"allow-plugins": {
			"pestphp/pest-plugin": true
		},
		"sort-packages": true
	},
	"scripts": {
        "test": "vendor/bin/pest"
    }
}
